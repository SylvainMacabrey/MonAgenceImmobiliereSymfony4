<div class="card mb-4">
	{% if property.filename %}
		<img src="{{vich_uploader_asset(property, 'imageFile')}}" class="card-img-top" style="width: 100%; height: 5cm">
	{% else %}
		<img src="/images/default.png" class="card-img-top" style="width: 100%; height: 5cm">
	{% endif %}
	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">
				{{ property.title }}
			</a>
		</h5>
		<p class="card-text">{{ property.city }} - ({{ property.postalCode }})</p>
		<div class="text-primary" style="font-size: 2em; font-weight: bold">
			{{ property.formattedPrice }} â‚¬
		</div>
	</div>
</div>